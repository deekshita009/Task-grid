{
    // IntelliSense and Auto Suggestions - DISABLED
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    "editor.suggestOnTriggerCharacters": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.wordBasedSuggestions": "off",
    "editor.tabCompletion": "off",
    "editor.parameterHints.enabled": false,
    "editor.suggest.showKeywords": false,
    "editor.suggest.showSnippets": false,
    "editor.suggest.showFunctions": false,
    "editor.suggest.showConstructors": false,
    "editor.suggest.showFields": false,
    "editor.suggest.showVariables": false,
    "editor.suggest.showClasses": false,
    "editor.suggest.showModules": false,
    "editor.suggest.showProperties": false,
    "editor.suggest.showMethods": false,
    "editor.suggest.localityBonus": false,
    // PHP specific settings - DISABLED
    "php.suggest.basic": false,
    "php.completion.enabled": false,
    // Intelephense settings (PHP IntelliSense) - DISABLED
    "intelephense.diagnostics.enable": false,
    "intelephense.completion.triggerParameterHints": false,
    "intelephense.completion.insertUseDeclaration": false,
    "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": false,
    // HTML/CSS suggestions - DISABLED
    "html.suggest.html5": false,
    "css.completion.completePropertyWithSemicolon": false,
    "css.completion.triggerPropertyValueCompletion": false,
    // Auto closing and renaming tags
    "auto-close-tag.activationOnLanguage": [
        "xml",
        "php",
        "blade",
        "ejs",
        "jinja",
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact",
        "plaintext",
        "markdown",
        "vue",
        "liquid",
        "erb",
        "lang-cfml",
        "cfml",
        "HTML (EEx)",
        "HTML (Eex)",
        "plist"
    ],
    // GitHub Copilot settings - DISABLED
    "github.copilot.enable": {
        "*": false,
        "yaml": false,
        "plaintext": false,
        "markdown": false,
        "php": false,
        "html": false,
        "css": false,
        "javascript": false
    },
    "github.copilot.inlineSuggest.enable": false,
    // General editor improvements
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    // File associations
    "files.associations": {
        "*.php": "php"
    }
}